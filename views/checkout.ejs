<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="style.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <title>Check In</title>
</head>
<body>
    <div class="otherstuff">
        <button id="config" onclick="showElement('configwindow', 'block'); showElement('login', 'grid');
        hideElement('page2');"></button>
        <label id="displayRoomNum">Room: 000</label>
        <label id="userCount"><b>Students out: 0</b></label>
    </div>
    <div id="configwindow">
        <div class="header">
            <h3>Room Settings</h3>
            <button id="close" onclick="hideElement('configwindow')"><b>x</b></button>
        </div>
        <div class="body">
            <div id ="login">
                <label>Pin:</label>
                <input type="password" id="pin" placeholder = "0000"><br>
                <button type="submit" id="loginButton"><b>Log in</b></button>
            </div>
            <div id ="page2">
                <label>Room Number</label><br>
                <input type="number" id="roomNum" placeholder = "000"><br>
                <label>Add Staff</label>
                <button type="buttom" id="addStaff" onclick= "showElement('staffName','block');"><b>+</b></button>
                <input type="text" id="staffName"><br>
                <button type = "submit" id="setRoom" onclick="hideElement('staffName');"><b>Update Settings</b></button>
                <button type = "submit" id="clearStaff"><b>Clear</b></button>
                <div id="staffList">
                    <ul></ul>
                </div>
            </div>
        </div>
    </div>
    <div class="logo">  
        <img src="images/3435.png">
        <h3>Scan to check in</h3>
    </div>

    <div class="inputs">
        <div id="namethislater">
            <ul id="userlist">
            </ul>
        </div>
        <form>
        <label><b>ID:</b></label>
        <input type="number" id = "idNum" placeholder = "Enter your ID" ><br>
        <label><b>Name:</b></label>
        <input type="text" id = "flname" placeholder = "Enter your name" ><br>
        </form>
        <button type="submit" id="start"><b>Start</b></button>
    </div>
    <div id="checkoutwindow">
        <div id="info">
            <label id="label1">LOCATION</label>
            <select name="location" id="location">
              <option>option 1</option>
            </select>
            <p id="time"></p>
            <button id="checkout">Check Out</button>
        </div>
    </div>
    <script src="index.js"></script>
</body>
</html>
